@using System.Globalization
@using Microsoft.Extensions.Hosting
@using Microsoft.Extensions.Configuration
@* @using Volo.Abp.AspNetCore.Components.Server.LeptonXLiteTheme.Bundling *@
@using Volo.Abp.Localization
@* @using Volo.Abp.AspNetCore.Components.Web.Theming.Bundling *@

@using  TTShang.AntDesignTheme.Blazor.Server.Bundling

@inject IHostEnvironment Env
@inject IConfiguration Configuration
@{
    var rtl = CultureHelper.IsRtl ? "rtl" : string.Empty;
    var apiBaseUrl = Configuration["App:SelfUrl"] ?? "";
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name" dir="@rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TTShang</title>
    <base href="/" />

    @if (!string.IsNullOrEmpty(apiBaseUrl))
    {
        <!-- Resource hints for better performance -->
        var uri = new Uri(apiBaseUrl);
        <link rel="dns-prefetch" href="@($"//{uri.Host}")">
        <link rel="preconnect" href="@apiBaseUrl" crossorigin>
    }

    <style>
        #app-loading-mask {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.95);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease-out;
        }

        #app-loading-mask.hidden {
            opacity: 0;
            pointer-events: none;
        }

        .loading-spinner {
            width: 50px;
            height: 50px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #1890ff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .loading-text {
            margin-top: 20px;
            font-size: 16px;
            color: #333;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }
    </style>

    <AbpStyles BundleName="@BlazorAntDesignThemeBundles.Styles.Global" WebAssemblyStyleFiles="GlobalStyles" />

    @* <link href="TTShang.Blazor.styles.css" rel="stylesheet"/> *@
    <link href="TTShang.Blazor.Client.styles.css" rel="stylesheet"/>
    
    <HeadOutlet />

    
</head>
<body class="abp-application-layout @rtl">

    <!-- Loading mask overlay -->
    <div id="app-loading-mask" role="status" aria-live="polite" aria-label="应用程序正在加载">
        <div class="loading-spinner" aria-hidden="true"></div>
        <div class="loading-text">正在加载中，请稍候...</div>
    </div>

    <Routes @rendermode="InteractiveAuto" />

    <div id="blazor-error-ui">
        @if (Env.IsDevelopment())
        {
            <text>An unhandled exception has occurred. See browser dev tools for details.</text>
        }
        else if (Env.IsStaging() || Env.IsProduction())
        {
            <text>An error has occurred. This application may no longer respond until reloaded.</text>
        }
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    
    <AbpScripts BundleName="@BlazorAntDesignThemeBundles.Scripts.Global" WebAssemblyScriptFiles="GlobalScripts" />

    <script>
        // Function to hide the loading mask after Blazor has initialized
        window.hideAppLoadingMask = function() {
            const mask = document.getElementById('app-loading-mask');
            if (mask) {
                mask.classList.add('hidden');
                // Remove from DOM after transition completes
                setTimeout(function() {
                    mask.remove();
                }, 500);
            }
        };
    </script>

    <script src="_framework/blazor.web.js"></script>

</body>
</html>

@code{
    private List<string> GlobalStyles =>
    [
        "global.css"
    ];

    private List<string> GlobalScripts =>
    [
        "global.js"
    ];

}